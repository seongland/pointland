{
  "name": "pointland",
  "version": "1.0.8",
  "description": "Web Metaverse with Point Cloud",
  "author": "seonglae",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "start": "cross-env NODE_ENV=production nuxt",
    "production": "pm2 delete pointland & pm2 start process.json",
    "restart": "pm2 restart pointland",
    "stop": "pm2 delete pointland",
    "build": "cross-env NODE_ENV=production nuxt build",
    "format": "prettier --write \"**/*.{js,jsx,json,md,vue}\"  --ignore-path .gitignore"
  },
  "dependencies": {
    "@feathersjs/authentication": "^4.5.11",
    "@feathersjs/express": "^4.5.8",
    "@feathersjs/feathers": "^4.5.8",
    "@fortawesome/fontawesome-free": "^5.13.1",
    "@nuxtjs/axios": "^5.11.0",
    "@nuxtjs/vuetify": "^1.0.0",
    "@pnext/three-loader": "^0.2.2",
    "@tweenjs/tween.js": "^18.6.4",
    "camera-controls": "^1.27.0",
    "consola": "^2.15.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "feathers-hooks-common": "^5.0.3",
    "feathers-mongoose": "^8.3.1",
    "hold-event": "^0.0.1",
    "mongoose": "5.11.15",
    "nipplejs": "^0.9.0",
    "nuxt": "^2.0.0",
    "nuxt-vuex-localstorage": "^1.2.6",
    "three": "^0.126.1",
    "v-snackbars": "^3.1.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  },
  "config": {
    "nuxt": {
      "host": "0.0.0.0",
      "port": 8080
    }
  },
  "nodemonConfig": {
    "watch": [
      "server/*",
      "addon/",
      "./*"
    ],
    "ignore": [
      "build/*",
      "log/*",
      "cache/*"
    ],
    "ext": "js,json,cc,hh, gyp",
    "exec": "nuxt  --max_old_space_size=4096 --optimize_for_size"
  }
}
