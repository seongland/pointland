{
  "name": "3d-mapping",
  "version": "20.12.2.1",
  "description": "Geology Panorama Street View Map",
  "author": "seonglae",
  "private": true,
  "scripts": {
    "dev": "yarn build && cross-env NODE_ENV=development nodemon",
    "production": "yarn build && pm2 delete 3d-mapping & pm2 start process.json",
    "restart": "pm2 restart 3d-mapping",
    "stop": "pm2 delete 3d-mapping",
    "build": "node-gyp configure build --debug",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "format": "prettier --write \"**/*.{js,jsx,json,md,vue}\"  --ignore-path .gitignore"
  },
  "dependencies": {
    "@feathersjs/authentication": "^4.5.8",
    "@feathersjs/authentication-local": "^4.5.8",
    "@feathersjs/authentication-oauth": "^4.5.8",
    "@feathersjs/configuration": "^4.5.8",
    "@feathersjs/express": "^4.5.8",
    "@feathersjs/feathers": "^4.5.8",
    "@nuxtjs/axios": "^5.11.0",
    "compression": "^1.7.4",
    "consola": "^2.15.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dbffile": "^1.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "feathers-hooks-common": "^5.0.3",
    "feathers-mongoose": "^8.3.1",
    "jimp": "^0.16.1",
    "jimp-compact": "^0.16.1",
    "mongoose": "^5.10.1",
    "neat-csv": "^5.2.0",
    "nuxt": "^2.0.0",
    "nuxt-vuex-localstorage": "^1.2.6",
    "ol": "^6.2.1",
    "proj4": "^2.6.2",
    "python-shell": "^2.0.1",
    "three": "^0.118.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.13.1",
    "@nuxtjs/vuetify": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-vue": "^6.2.2",
    "node-addon-api": "^3.0.2",
    "nodemon": "^1.18.9"
  },
  "config": {
    "nuxt": {
      "host": "0.0.0.0",
      "port": 80
    }
  },
  "nodemonConfig": {
    "watch": [
      "server/*",
      "addon/",
      "./*"
    ],
    "ignore": [
      "build/*",
      "log/*",
      "cache/*"
    ],
    "events": {
      "restart": "yarn build"
    },
    "ext": "js,json,cc,hh, gyp",
    "exec": "nuxt  --max_old_space_size=4096 --optimize_for_size"
  }
}